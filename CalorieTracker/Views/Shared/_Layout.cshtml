<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/style.css")" rel="stylesheet" type="text/css" />
    @RenderSection("CSS", required: false)
    <script src="@Url.Content("~/Scripts/jquery-1.5.1.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Scripts/modernizr-1.7.min.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(document).ready(function () {
            var path = location.pathname.substring(1);
            if (path)
                $('nav a[href$="' + path + '"]').attr('class', 'selected');
        });
    </script>
    @RenderSection("Javascript", required: false)
</head>
<body>

    <div class="page">
        <header>
            <div id="title">
                <h1>Calorie Log</h1>
            </div>
            <div id="logindisplay">
                @if (Request.IsAuthenticated)
                {
                    @Html.Partial("_SignOffPartial")
                }
                @RenderSection("SignOnOff", false)
            </div>

            <nav>
                @if (Request.IsAuthenticated)
                {
                <ul id="menu">
                    <li>@Html.ActionLink("Update", "Index", "Update")</li>
                    <li>@Html.ActionLink("Daily Breakdown", "HourTracker", "Records")</li>
                    <!--<li>@Html.ActionLink("History", "CalendarTracker", "Records")</li>-->
                    <li>@Html.ActionLink("Week-in Review", "WeekTracker", "Records")</li>
                </ul>
                }
            </nav>

        </header>
        <section id="main">
            @RenderBody()
        </section>
    </div>
</body>
</html>
