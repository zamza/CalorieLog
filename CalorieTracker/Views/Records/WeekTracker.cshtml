@model CalorieTracker.ViewModels.WeekViewModel
@{
    ViewBag.Title = "WeekTracker";
}
@section CSS
{
    <link href="@Url.Content("~/Content/visualize.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/visualize-light.css")" rel="stylesheet" type="text/css" />
}
@section Javascript
{
    <script src="@Url.Content("/Scripts/visualize.jQuery.js")" type="text/javascript"></script>
    <script type="text/javascript">
        $(function () {
            $('table').hide();
            $('table').visualize({ type: 'bar', height: '300px', width: '750px' });
        });
    </script>
}
<div id="week-page">
    @if (!Model.Empty)
    {
        <h1>
            You've consumed @Model.CalorieTotal Calories in the last 7 days</h1>
        <table>
            <caption>
                Calories by day</caption>
            <thead>
                <tr>
                    <td>
                    </td>
                    <th scope="col">
                    </th>
                </tr>
            </thead>
            <tbody>
                @{var i = 0;}
                @foreach (var Day in Model.Last7Days)
                {
                    <tr>
                        <th scope="row">@Day.Date.ToString("yyyy-MM-dd");
                        </th>
                        <td>@Day.CaloriesTotal
                        </td>
                    </tr>
                    i++;
                }
            </tbody>
        </table>
    }
    else
    {
        <h2>You have not updated your status in the last 7 days</h2>
        <h3>Head to the updates page and enter more updates so your status gets tracked</h3>
    }
</div>
