@model CalorieTracker.Models.RegisterModel
<div id="register-form">
    <h1>Register</h1>

    @using (Html.BeginForm("Register", "Account", FormMethod.Post))
    {
        @Html.TextBoxFor(m => m.UserName, new { @id = "RegName", @name = "RegName", @Placeholder = "User Name", @class = "default-value"})<br />
        @Html.ValidationMessageFor(m => m.UserName)

        @Html.TextBoxFor(m => m.Email, new { @Placeholder = "Email", @class = "default-value"})<br />
        @Html.ValidationMessageFor(m => m.Email)

        @Html.PasswordFor(m => m.Password, new { @Placeholder = "Password", @class = "default-value"})<br />
        @Html.ValidationMessageFor(m => m.Password)

        @Html.PasswordFor(m => m.ConfirmPassword, new { @Placeholder = "Confirm Password", @class = "default-value"})<br />
        @Html.ValidationMessageFor(m => m.ConfirmPassword)

        <input type="submit" value="Register" />
    }

</div>
